<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/secondaryLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="282dp"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/regLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semibold"
            android:text="Реєстрація"
            android:textColor="@color/black"
            android:textSize="32sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Електронна пошта"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:paddingRight="40dp"
            android:inputType="textEmailAddress"
            android:hint="Введіть ел. адресу"
            android:textColorHint="#d6d7d7"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/mail" />
    </RelativeLayout>

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Номер телефону"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:paddingRight="40dp"
            android:inputType="phone"
            android:hint="Введіть номер телефону"
            android:textColorHint="#d6d7d7"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/phone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/passLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Пароль"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/passInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:paddingRight="40dp"
            android:inputType="textPassword"
            android:hint="Введіть пароль"
            android:textColorHint="#d6d7d7"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/passIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/eye" />
    </RelativeLayout>

    <TextView
        android:id="@+id/confirmPassLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Підтвердження пароля"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/confirmPassInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:paddingRight="40dp"
            android:inputType="textPassword"
            android:hint="Підтвердіть пароль"
            android:textColorHint="#d6d7d7"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/confirmPassIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/eye" />
    </RelativeLayout>

    <Button
        android:id="@+id/regButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:text="Зареєструватися" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:backgroundTint="#df3b42"
        android:text="Назад" />


</LinearLayout>